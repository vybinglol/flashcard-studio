{
  "identifier": "default",
  "description": "Default capabilities for the flashcard app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-ask",
    "dialog:allow-message",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/FlashcardDecks/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DESKTOP/**" }
      ]
    }
  ]
}
